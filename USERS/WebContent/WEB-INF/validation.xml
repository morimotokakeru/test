<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE form-validation PUBLIC
  "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN"
  "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">

<form-validation>
	<formset>
		<!-- login -->
		<form name="logonForm">
			<field property="username" depends="required">
				<arg key="logonForm.username" />
			</field>
			<field property="password" depends="required,mask">
				<arg key="logonForm.password" />
				<var>
					<var-name>mask</var-name>
					<var-value>^[0-9a-zA-Z]*$</var-value>
				</var>
			</field>
		</form>

		<form name="new">
			<field property="firstName" depends="required">
				<msg name="required" key="errors.required" />
				<arg position="0" key="firstName" />
			</field>
			<field property="lastName" depends="required">
				<msg name="required" key="errors.required" />
				<arg position="0" key="lastName" />
			</field>
			<field property="title" depends="required">
				<msg name="required" key="errors.required" />
				<arg position="0" key="title" />
			</field>
			<field property="sex" depends="required">
				<msg name="required" key="errors.required" />
				<arg position="0" key="sex" />
			</field>
			<field property="company" depends="required">
				<msg name="required" key="errors.required" />
				<arg position="0" key="company" />
			</field>
			<field property="tell" depends="required">
				<msg name="required" key="errors.required" />
				<arg position="0" key="tell" />
			</field>
			<field property="changeDate" depends="required">
				<msg name="required" key="errors.required" />
				<arg position="0" key="changeDate" />
			</field>
		</form>
		
		<form name="update">
			<field property="firstName" depends="required">
				<msg name="required" key="errors.required" />
				<arg position="0" key="firstName" />
			</field>
			<field property="lastName" depends="required">
				<msg name="required" key="errors.required" />
				<arg position="0" key="lastName" />
			</field>
			<field property="title" depends="required">
				<msg name="required" key="errors.required" />
				<arg position="0" key="title" />
			</field>
			<field property="sex" depends="required">
				<msg name="required" key="errors.required" />
				<arg position="0" key="sex" />
			</field>
			<field property="company" depends="required">
				<msg name="required" key="errors.required" />
				<arg position="0" key="company" />
			</field>
			<field property="tell" depends="required">
				<msg name="required" key="errors.required" />
				<arg position="0" key="tell" />
			</field>
			<field property="changeDate" depends="required">
				<msg name="required" key="errors.required" />
				<arg position="0" key="changeDate" />
			</field>
		</form>
	</formset>
</form-validation>